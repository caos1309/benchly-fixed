platform :ios, '12.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

flutter_application_path = File.expand_path('..')
load File.join(flutter_application_path, '.flutter-plugins-dependencies')

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Firebase Core y Firestore
  pod 'FirebaseCore'
  pod 'FirebaseFirestore'
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    # 1) Forzar deployment target mínimo a iOS 12.0
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'

      # 2) Eliminar cualquier bandera '-G' de los flags de compilación
      %w[OTHER_CFLAGS OTHER_LDFLAGS OTHER_CPLUSPLUSFLAGS].each do |key|
        if config.build_settings[key].is_a?(String)
          flags = config.build_settings[key].split.reject { |f| f == '-G' }
          config.build_settings[key] = flags.join(' ')
        end
      end
    end

    # 3) También quitamos '-G' de COMPILER_FLAGS en cada archivo fuente
    target.source_build_phase.files.each do |file|
      next unless file.settings && file.settings['COMPILER_FLAGS']
      flags = file.settings['COMPILER_FLAGS'].split.reject { |f| f == '-G' }
      file.settings['COMPILER_FLAGS'] = flags.join(' ')
    end
  end
end